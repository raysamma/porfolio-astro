---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';

// 1. Get the base path for GitHub Pages
const base = import.meta.env.BASE_URL;
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

// --- NEW LOGIC: Determine Back Link ---
// Check if the post is a project based on tags or categories (case-insensitive)
const isProject = 
  post.data.tags?.some(tag => ['project', 'portfolio'].includes(tag.toLowerCase())) ||
  post.data.categories?.some(cat => ['project', 'portfolio'].includes(cat.toLowerCase()));

// Set the link and text based on the type
const backLink = isProject ? `${cleanBase}/projects` : `${cleanBase}/blog`;
const backText = isProject ? '← Back to Projects' : '← Back to Blog';
// --- END NEW LOGIC ---
---

<Layout title={post.data.title} description={post.data.excerpt}>
  <article class="blog-post">
    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>
      
      <div class="post-meta">
        <time class="post-date" datetime={post.data.date.toISOString()}>
          {new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        
        {post.data.categories && (
          <div class="post-categories">
            {post.data.categories.map((category: string) => (
              <a href={`${cleanBase}/categories/${category.toLowerCase().replace(/[\/\s]+/g, '-')}`} class="category-tag">
                {category}
              </a>
            ))}
          </div>
        )}
      </div>
      
      {post.data.excerpt && (
        <p class="post-excerpt">{post.data.excerpt}</p>
      )}
      
      <hr class="post-rule" />
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      {post.data.tags && (
        <div class="post-tags">
          <span class="tags-label">Tags:</span>
          <div class="tag-list">
            {post.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      )}
      
      <div class="post-navigation">
        <a href={backLink} class="back-link">{backText}</a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .post-header {
    margin-bottom: calc(var(--grid-unit) * 6);
    text-align: center;
  }

  .post-title {
    font-family: var(--font-heading-primary);
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 3);
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: calc(var(--grid-unit) * 1.5);
    margin-bottom: calc(var(--grid-unit) * 3);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .post-categories {
    display: flex;
    gap: calc(var(--grid-unit));
    flex-wrap: wrap;
    justify-content: center;
  }

  .category-tag {
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 0.8rem;
  }
  
  .category-tag:hover {
    text-decoration: underline;
  }

  .post-excerpt {
    font-size: 1.25rem;
    line-height: 1.5;
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0 auto;
    max-width: 650px;
  }

  .post-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 80px;
    margin: calc(var(--grid-unit) * 4) auto 0;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: calc(var(--grid-unit) * 6);
  }
  
  /* Markdown Content Styles */
  .post-content :global(h2) {
    font-family: var(--font-heading-secondary);
    font-size: 1.875rem;
    color: var(--color-accent);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(a) {
    color: var(--color-accent);
  }
  
  .post-content :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-footer {
    border-top: 1px solid var(--color-border);
    padding-top: calc(var(--grid-unit) * 4);
    margin-top: calc(var(--grid-unit) * 6);
  }

  .post-tags {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .tags-label {
    font-weight: bold;
    color: var(--color-text-primary);
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-family: var(--font-mono);
  }

  .post-navigation {
    text-align: center;
  }

  .back-link {
    font-family: var(--font-heading-secondary);
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.8rem 1.5rem;
    border: 2px solid var(--color-accent);
    border-radius: 4px;
    transition: all 0.2s;
    display: inline-block;
  }

  .back-link:hover {
    background: var(--color-accent);
    color: white;
  }

  @media (max-width: 768px) {
    .post-title { font-size: 2rem; }
  }
</style>