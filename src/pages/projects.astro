---
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

// Get base path for GitHub Pages
const base = import.meta.env.BASE_URL;

// Get all blog posts with category "Portfolio" or tag "project"
const allPosts = await getCollection('blog', (post) => {
  // Check categories (case-insensitive for robustness)
  const isPortfolio = post.data.categories?.some(cat => cat.toLowerCase() === 'portfolio');
  // Check tags
  const isProject = post.data.tags?.some(tag => tag.toLowerCase() === 'project');
  return isPortfolio || isProject;
});

// Sort posts by date
const sortedProjects = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Projects" description="My Portfolio Projects">
  <div class="projects-page">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="subtitle">A showcase of my data science and development work</p>
    </header>

    <div class="projects-grid">
      {sortedProjects.map((project) => (
        <article class="project-card">
          {project.data.image && (
            <div class="project-image">
              <img src={`${base}${project.data.image}`} alt={project.data.title} />
            </div>
          )}
          <div class="project-content">
            <h2 class="project-title">
              {/* Fixed: Added base path to the link */}
              <a href={`${base}/blog/${project.slug}`}>{project.data.title}</a>
            </h2>
            {project.data.excerpt && (
              <p class="project-excerpt">{project.data.excerpt}</p>
            )}
            <div class="project-tags">
              {project.data.tags?.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .projects-page {
    padding: 0 var(--content-padding);
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    margin-top: 2rem;
  }

  .page-header h1 {
    font-family: var(--font-heading-primary);
    font-size: 3.5rem;
    color: var(--color-accent);
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-secondary);
    font-size: 1.2rem;
    margin-top: 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .project-card {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, border-color 0.2s;
    background: var(--color-surface);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent);
  }

  .project-image {
    aspect-ratio: 16/9;
    overflow: hidden;
    border-bottom: 1px solid var(--color-border);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
    margin: 0;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .project-title {
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
    font-family: var(--font-heading-secondary);
    line-height: 1.2;
  }

  .project-title a {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .project-title a:hover {
    color: var(--color-accent);
  }

  .project-excerpt {
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .tag {
    background: var(--color-surface);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 0.25em 0.75em;
    font-size: 0.75em;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-mono);
    transition: background 0.2s, color 0.2s;
  }
  
  .tag:hover {
    background: var(--color-accent);
    color: var(--color-background);
    border-color: var(--color-accent);
  }

  :global([data-theme="dark"]) .tag {
     background-color: var(--color-background);
  }
  
  :global([data-theme="dark"]) .tag:hover {
     background-color: var(--color-accent);
     color: white;
  }
</style>