<script>
  document.addEventListener("astro:page-load", () => {
    const elementsToAnimate = document.querySelectorAll(".fade-in-stagger");
    if (elementsToAnimate.length > 0) {
      gsap.from(elementsToAnimate, {
        delay: 0.2,
        duration: 0.8,
        y: 30,
        opacity: 0,
        stagger: 0.2,
        ease: "power2.out",
      });
    }
  });
</script>