---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  canonical?: string;
}

import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

// 1. TEACHING MOMENT: Define the base path for GitHub Pages
const base = import.meta.env.BASE_URL || '';
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = '/og-image.png', // Default image in public/ folder
  type = 'website',
  publishedTime,
  canonical,
} = Astro.props;

const pageTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`;

/** * FIX: Canonical URLs must include the full site domain and base path.
 * We use the Astro.url.pathname which already includes the base path if configured correctly.
 */
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);

/**
 * FIX: Robust Image Path joining.
 * 1. Ensure the image prop has a leading slash.
 * 2. Prepend the base path ONLY if it's not already there.
 */
const formattedImage = image.startsWith('/') ? image : `/${image}`;
const pathWithBase = formattedImage.startsWith(cleanBase) 
  ? formattedImage 
  : `${cleanBase}${formattedImage}`;

/**
 * Social platforms require absolute URLs (https://...).
 * This combines your 'site' from astro.config.mjs with the calculated path.
 */
const imageURL = new URL(pathWithBase, Astro.site);
---

<title>{pageTitle}</title>
<meta name="description" content={description} />
<meta name="author" content="Chirayu Khalwa" />

<link rel="canonical" href={canonicalURL} />

<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={imageURL} />
<meta property="og:site_name" content={SITE_TITLE} />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL} />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- 3. FIX: Add the base path to RSS and Sitemap links -->
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={`${cleanBase}/rss.xml`} />
<link rel="sitemap" type="application/xml" href={`${cleanBase}/sitemap-index.xml`} />